<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/ll_event_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background_create_account"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="24dp"
            android:paddingEnd="42dp"
            android:paddingBottom="24dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:onClick="backPressed"
                    android:contentDescription="Back Button"
                    android:src="@drawable/ic_frame3" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_photo"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="onClickChooseImage"
                    tools:targetApi="lollipop" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/senbold"
                android:lineSpacingMultiplier="1.25"
                android:text="Submit a complain"
                android:textColor="@color/text700"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_bill_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="top"
                android:lineSpacingMultiplier="1.5"
                android:text="Regarding maintenance, mess or other complain regarding hostel (attach picture if any)"
                android:textColor="@color/text700"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- category input -->
        <LinearLayout
            android:id="@+id/ll_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="90dp"
                android:fontFamily="@font/senregular"
                android:lineSpacingMultiplier="1.14"
                android:text="Complaint category"
                android:textColor="@color/text700"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_category_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background_rounded_section_task"
                android:gravity="center_vertical"
                android:minHeight="28dp">

                <com.example.karakoram.views.CustomSpinner
                    android:id="@+id/spinner_complain_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/spinner_background"
                    android:dropDownWidth="match_parent"
                    android:entries="@array/complaint_category" />
            </LinearLayout>

        </LinearLayout>

        <!-- maintenance area input -->
        <LinearLayout
            android:id="@+id/ll_complain_maintenance_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="90dp"
                android:fontFamily="@font/senregular"
                android:lineSpacingMultiplier="1.14"
                android:text="Complaint area"
                android:textColor="@color/text700"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background_rounded_section_task"
                android:gravity="center_vertical"
                android:minHeight="28dp">

                <com.example.karakoram.views.CustomSpinner
                    android:id="@+id/spinner_complain_maintenance_area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/spinner_background"
                    android:dropDownWidth="match_parent"
                    android:entries="@array/complaint_anonymity" />
            </LinearLayout>

        </LinearLayout>

        <!-- mess area input -->
        <LinearLayout
            android:id="@+id/ll_complain_mess_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="90dp"
                android:fontFamily="@font/senregular"
                android:lineSpacingMultiplier="1.14"
                android:text="Complaint area"
                android:textColor="@color/text700"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background_rounded_section_task"
                android:gravity="center_vertical"
                android:minHeight="28dp">

                <com.example.karakoram.views.CustomSpinner
                    android:id="@+id/spinner_complain_mess_area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/spinner_background"
                    android:dropDownWidth="match_parent"
                    android:entries="@array/complaint_anonymity" />
            </LinearLayout>

        </LinearLayout>

        <!-- Description input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/senregular"
                android:gravity="top"
                android:lineSpacingMultiplier="1.14"
                android:text="Description"
                android:textColor="@color/text700"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/et_complain_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_rounded_section_task"
                android:fontFamily="@font/senbold"
                android:hint="Enter complaint details"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:lineSpacingMultiplier="1.5"
                android:padding="12dp"
                android:textColor="@color/text700"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- wing input -->
        <LinearLayout
            android:id="@+id/ll_complaint_wing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="90dp"
                android:fontFamily="@font/senregular"
                android:lineSpacingMultiplier="1.14"
                android:text="Wing"
                android:textColor="@color/text700"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:minHeight="28dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/ll_complaint_wing_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/background_rounded_section_task"
                    android:gravity="center_vertical"
                    android:minHeight="28dp">

                    <com.example.karakoram.views.CustomSpinner
                        android:id="@+id/spinner_complain_wing"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/spinner_background"
                        android:dropDownWidth="match_parent"
                        android:entries="@array/wing" />
                </LinearLayout>

                <com.example.karakoram.DynamicImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="4dp"
                    android:onClick="openWingMap"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_map" />


            </LinearLayout>



        </LinearLayout>

        <!-- room no -->
        <LinearLayout
            android:id="@+id/ll_complaint_room_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/senregular"
                android:lineSpacingMultiplier="1.14"
                android:text="Room number: "
                android:textColor="@color/text700"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/background_rounded_section_task"
                android:orientation="horizontal">

                <com.example.karakoram.views.CustomSpinner
                    android:id="@+id/spinner_complain_floor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/spinner_background"
                    android:dropDownWidth="wrap_content"
                    android:entries="@array/floor" />

                <com.example.karakoram.views.CustomSpinner
                    android:id="@+id/spinner_complain_room_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/spinner_background"
                    android:dropDownWidth="wrap_content"
                    android:entries="@array/room_number" />

            </LinearLayout>
        </LinearLayout>

        <!-- Submit button -->
        <Button
            android:id="@+id/button_complain_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="35dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/form_submit_button"
            android:clickable="true"
            android:focusable="true"
            android:font="@font/senregular"
            android:onClick="onSubmitComplaint"
            android:text="Submit"
            android:textColor="@color/text700"
            tools:targetApi="o" />

        <!-- disclaimer footer -->
        <TextView
            android:id="@+id/tv_complain_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:lineSpacingExtra="2sp"
            android:text="Your details attached to this form"
            android:textColor="@color/text700"
            android:visibility="visible"
            android:textSize="12sp" />

        <!-- complain image text -->
        <TextView
            android:id="@+id/tv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/senbold"
            android:gravity="top"
            android:lineSpacingMultiplier="1.14"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:text="Selected image:"
            android:textColor="@color/text700"
            android:textSize="18sp"
            android:visibility="gone"/>

        <!-- complain image -->
        <com.example.karakoram.DynamicImageView
            android:id="@+id/div_complain_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerInside" />

    </LinearLayout>
</ScrollView>

