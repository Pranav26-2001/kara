<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/lv_top"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_top_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Top banner icon"
            android:src="@drawable/m2" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp">

        <LinearLayout
            android:id="@+id/lv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:minHeight="0dp"
                tools:ignore="Suspicious0dp">

                <com.example.karakoram.DynamicImageView
                    android:id="@+id/div_event_placeholder_image"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:foregroundGravity="bottom"
                    android:outlineAmbientShadowColor="@color/cardview_dark_background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/m2"
                    tools:ignore="PrivateResource"
                    tools:targetApi="p" />

                <com.example.karakoram.DynamicImageView
                    android:id="@+id/div_event_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="Firebase event image"
                    android:scaleType="centerInside" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/senbold"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_event_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8sp"
                android:layout_marginBottom="8sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/quicksandregular"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="10sp"
                tools:ignore="RtlSymmetry,SmallSp"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/tv_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/senregular"
                android:textSize="18sp"
                tools:targetApi="o" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal"
                android:gravity="right">

                <Button
                    android:id="@+id/button_event_description_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/event_description_button"
                    android:drawableEnd="@drawable/ic_outline_done_24"
                    android:fontFamily="@font/senregular"
                    android:text="Done" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>