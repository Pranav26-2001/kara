<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".childFragment.bill.signIn.adminFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rect_section_task_sign_in"
        android:orientation="vertical">

        <!-- title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="24dp"
            android:paddingEnd="42dp"
            android:paddingBottom="24dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/senbold"
                android:lineSpacingMultiplier="1.25"
                android:text="Resident Login"
                android:textColor="@color/text700"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="top"
                android:lineSpacingMultiplier="1.5"
                android:text="Only for Karakoram residents. Contact developers if not able to login"
                android:textColor="@color/text700"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- amount input -->
        <LinearLayout
            android:id="@+id/rl_entry_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_entry_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/senregular"
                android:gravity="top"
                android:lineSpacingMultiplier="1.14"
                android:text="Entry number"
                android:textColor="@color/text700"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/et_entry_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_rounded_section_task"
                android:fontFamily="@font/senbold"
                android:importantForAutofill="no"
                android:lineSpacingMultiplier="1.5"
                android:padding="12dp"
                android:textColor="@color/text700"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Password input -->
        <LinearLayout
            android:id="@+id/rl_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/senregular"
                android:gravity="top"
                android:lineSpacingMultiplier="1.14"
                android:text="Password"
                android:textColor="@color/text700"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_rounded_section_task"
                android:fontFamily="@font/senbold"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:lineSpacingMultiplier="1.5"
                android:padding="12dp"
                android:textColor="@color/text700"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>