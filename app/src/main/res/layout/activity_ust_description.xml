<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">



    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp">

        <LinearLayout
            android:id="@+id/lv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/feedback_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/senbold"
                android:textSize="25sp" />



            <TextView
                android:id="@+id/meal_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/senregular"
                android:layout_gravity="start"
                android:text="Lunch"
                android:layout_marginBottom="25dp"
                android:textSize="20sp"
                tools:targetApi="o" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/ic_background_user_info">

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:id="@+id/feedback_star"
                android:layout_marginRight="10dp"

                android:layout_gravity="center"
                android:clickable="false"
                android:isIndicator="true"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/feedback_details"
                android:textSize="18sp"
                android:text="default tetext"
                android:fontFamily="@font/senbold"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/feedback_user_details"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal"
                android:gravity="right">

                <Button
                    android:id="@+id/button_event_description_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/event_description_button"
                    android:drawableEnd="@drawable/ic_outline_done_24"
                    android:fontFamily="@font/senregular"
                    android:text="Done" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>